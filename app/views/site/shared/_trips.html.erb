<% @trips.each do |trip| %>
  <div class="col-sm-4 col-lg-4 col-md-4">
      <div class="thumbnail">
          <%= image_tag trip.picture.url(:medium) %>
          <div class="caption">
              <h4 class="pull-right"><%= humanized_money_with_symbol trip.price%></h4>     
              <h4>         
                    <%= link_to truncate(trip.title, length: 20), 
                    site_trip_detail_path(trip), remote: true, data: { push: :partial } %>
              </h4>
              <p><%= truncate(trip.description_short, length: 100) %></p>
          
          </div>
      </div>
  </div>
<% end %>
